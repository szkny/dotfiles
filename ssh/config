# common setting
Host *
  StrictHostKeyChecking no
  UserKnownHostsFile=/dev/null
  ServerAliveInterval 60
  ServerAliveCountMax 300
  TCPKeepAlive yes
  LogLevel QUIET

# Github
Host github github.com
    HostName github.com
    IdentityFile ~/.ssh/keyname
    User git

# Dev server
Host szknypc powershell screensave-szknypc sleep-szknypc jupyterlab
    HostName xxx.xxx.xxx.xxx
    IdentityFile ~/.ssh/keyname
    User szkny
    Port 2222
    ProxyCommand bash -c 'if nc -z -w 1 %h 2222 &> /dev/null; then nc %h 2222; else nc xxx.xxx.xxx.xxx 2222; fi'

Host powershell
    RequestTTY force
    RemoteCommand source ~/.zshrc && cd ~/win_home && powershell.exe

Host screensave-szknypc
    RequestTTY no
    RemoteCommand source ~/.zshrc && powershell.exe -Command "Start-Process C:\Windows\System32\scrnsave.scr"

Host sleep-szknypc
    RequestTTY no
    RemoteCommand source ~/.zshrc && rundll32.exe powrprof.dll,SetSuspendState Sleep

Host jupyterlab
    localforward 8888 localhost:8888
    RequestTTY force
    RemoteCommand eval "$(~/.local/bin/mise activate zsh)" && cd ~/Project/jupyterlab && jupyter lab --no-browser --port 8888
